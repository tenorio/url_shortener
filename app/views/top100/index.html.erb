<h1>Top 100 accessed URL's</h1>

<% if @urls.present? %>
  <div>
    <table class="w3-table w3-striped w3-bordered">
      <tr class="w3-teal">
        <th></th>
        <th>URL</th>
        <th>URL shortened</th>
        <th>URL title</th>
        <th>Hits</th>
        <% @urls.each_with_index do |url, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= url.url %></td>
          <td><%= link_to(nil, "https://#{request.host}/#{url.url_shortened}", { target: '_blank' }) %></td>
          <td><%= url.title.present? ? url.title : 'N/A' %></td>
          <td><%= pluralize(url.counter_hit, 'hit') %></td>
        </tr>
      <% end %>
      </tr>
    </table>
  </div>
<% else %>
  <div>No data available yet.</div>
<% end %>

<br>

<%= link_to 'Back to home', root_path %>

